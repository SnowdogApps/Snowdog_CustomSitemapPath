<config>
    <modules>
        <Snowdog_CustomSitemapPath>
            <version>1.0.0</version>
        </Snowdog_CustomSitemapPath>
    </modules>
    <default>
        <general>
            <file>
                <sitemap_generate_valid_paths>
                    <!-- This data should be merged with public_files_valid_paths -->
                    <available>
                        <any_path>/*/*.xml</any_path>
                    </available>
                </sitemap_generate_valid_paths>
            </file>
        </general>
    </default>
</config>